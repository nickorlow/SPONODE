<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent">
	<LinearLayout
		 android:orientation = "vertical"
         android:layout_alignParentTop="true"
         android:layout_width = "match_parent"
         android:layout_height = "wrap_content"
		android:id="@+id/linearLayout1">
		<TextView
			android:text="Settings"
			android:textSize="54dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/textView2" />
        <TextView
		android:text="SPONODE ANDROID"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:id="@+id/aboutView" />
		<Space
			android:layout_width="wrap_content"
			android:layout_height="30dp"/>
        <TextView
			android:text="Current Playlist: None"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/currentPlaylistText" />
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/playlistURL"
			android:hint="Playlist URL" />

		<Button
			android:text="Set Playlist"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
            android:onClick="ChangePlaylist"
			android:id="@+id/setPlaylistButton" />
		<Space
			android:layout_width="wrap_content"
			android:layout_height="10dp"/>

		<TextView
			android:text="\nAllow Explicit Songs"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView1" />
		<Switch
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/explicitSwitch" />
        <Space
			android:layout_width="wrap_content"
			android:layout_height="10dp"/>
        <TextView
			android:text="\nNot Working?"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView12" />
         <TextView
			android:text="Turn SPONODE on"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView162" />
        <Button
			android:text="Set Notification Settings"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
            android:onClick="OpenSettings"
			android:id="@+id/openSettingsBtn" />


	</LinearLayout>

	<TextView
		android:text="Made By Nicholas Orlowsky in Texas"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="5dp"
        android:gravity="center"
		android:id="@+id/aboutView" />
</RelativeLayout>